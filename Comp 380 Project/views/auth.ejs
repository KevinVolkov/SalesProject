<!-- This file is the view for the authentication page. It contains the login and register forms. -->

<!DOCTYPE html> 
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <title><%= title %></title>
</head>
<body>
    <%- include('partials/header') %> <!-- Include the header partial -->
    <!-- set sign in button to hidden because already on auth page-->

    <main>

        <!-- Authentication Forms Container -->
        <div id="auth-container" class="auth">
        <!-- Login Form -->
        <form id="login-form" class="visible">
            <h2>Login</h2>
            <label for="login-email">Email</label>
            <input type="email" id="login-email" required>
            <label for="login-password">Password</label>
            <input type="password" id="login-password" required>
            <button type="submit">Login</button>
            <p>Don't have an account? <a href="#" id="register-link">Register</a></p>
            <p id="login-error-message" class="error hidden">Invalid email or password.</p>
        </form>
        <!-- Register Form -->
        <form id="register-form" class="hidden">
            <h2>Register</h2>
            <label for="register-email">Email</label>
            <input type="email" id="register-email" required>
            <label for="register-password">Password</label>
            <input type="password" id="register-password" required>
            <button type="submit">Register</button>
            <p>Already have an account? <a href="#" id="login-link">Login</a></p>
            <p id="register-error-message" class="error hidden">Registration failed.</p>
        </form>
        </div>


    </main>
    <script src="/javascript/auth/auth.js"></script>
    <script src="/javascript/auth/authtokenverify.js"></script> <!-- Script to verify token and update profile/login button to be updated when the user is logged in or not-->

</body>
</html>